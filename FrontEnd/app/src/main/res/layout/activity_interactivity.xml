<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Interactivity"
        android:background="@drawable/ic_interaction_screen">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_iconmilk" android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.469" app:layout_constraintVertical_bias="0.017"
            android:scaleX=".75" android:scaleY=".75"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/TextQuestion"
            android:layout_marginBottom="305dp" android:text="@string/post_question"
            app:layout_constraintVertical_bias="0.0" android:layout_marginTop="319dp"
            android:layout_marginRight="45dp" android:layout_marginLeft="45dp" android:gravity="center_horizontal"
            app:layout_constraintHorizontal_bias="0.48" android:textSize="17sp" android:textColor="#43A3B1"
    />
    <Button
            android:text="@string/bButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button5"
            app:backgroundTint="#00b4d8" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="BackClickHandler"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.767"
            android:layout_marginEnd="58dp" android:layout_marginRight="58dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.218" android:textSize="13sp"/>
    <Button
            android:text="@string/nButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button3"
            app:backgroundTint="#EF233C" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="noClickHandler"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.655"
            app:layout_constraintStart_toEndOf="@+id/button" app:layout_constraintHorizontal_bias="0.094"
    />
    <Button
            android:text="@string/yButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:onClick="yesClickHandler" app:backgroundTint="#0BCE83" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.655"
            android:layout_marginLeft="58dp" android:layout_marginStart="58dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button4"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:backgroundTint="#9C27B0" app:layout_constraintHorizontal_bias="0.706"
            app:layout_constraintVertical_bias="0.976" android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" android:onClick="loadClickHandler" android:text="@string/lButton"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="1"
            android:ems="2"
            android:id="@+id/UserInputedNodeID"
            android:layout_marginLeft="7dp" android:layout_marginStart="7dp"
            app:layout_constraintStart_toEndOf="@+id/button4" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.405" app:layout_constraintVertical_bias="0.976"
            android:minWidth="48dp" android:minHeight="48dp"/>
    <Button
            android:text="@string/mButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button2"
            app:backgroundTint="#F5ED00" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="MaybeClickHandler"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.655"
            app:layout_constraintStart_toEndOf="@+id/button3" app:layout_constraintHorizontal_bias="0.238"
            android:layout_marginRight="5dp" android:layout_marginEnd="5dp"/>
    <TextView
            android:text="@string/pre_description"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/TextDescription"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="435dp"
            app:layout_constraintVertical_bias="0.0" android:layout_marginLeft="45dp"
            android:layout_marginStart="45dp" android:layout_marginRight="45dp" android:layout_marginEnd="45dp"
            android:layout_marginTop="190dp" app:layout_constraintHorizontal_bias="0.483"
            android:gravity="center_horizontal" android:textSize="17sp" android:textColor="#43A3B1"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textGoBackCount"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginTop="450dp"
            android:layout_marginBottom="175dp"
            android:layout_marginRight="35dp" android:layout_marginEnd="35dp" android:textStyle="bold"
            android:textSize="13sp" android:textColor="#327A85" app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintHorizontal_bias="0.105"/>
    <TextView
            android:text="@string/GoBackprompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="130dp"
            android:layout_marginStart="130dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="65dp"
            android:layout_marginRight="65dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.233"
            app:layout_constraintVertical_bias="0.766" android:layout_marginBottom="10dp" android:textStyle="bold"
            android:textColor="#327A85" android:textSize="13sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>