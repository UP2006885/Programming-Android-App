<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Interactivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/TextQuestion"
            android:layout_marginBottom="250dp" android:text="@string/post_question"
            app:layout_constraintVertical_bias="0.337"/>
    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button5"
            app:backgroundTint="#673AB7" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="BackClickHandler"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.888"
            android:layout_marginEnd="168dp" android:layout_marginRight="168dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="155dp"
            android:layout_marginStart="155dp" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="No"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button3"
            app:backgroundTint="#EF233C" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="noClickHandler"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.793"
            app:layout_constraintStart_toEndOf="@+id/button" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginLeft="10dp" android:layout_marginStart="10dp"/>
    <Button
            android:text="Yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:onClick="yesClickHandler" app:backgroundTint="#0BCE83" app:layout_constraintHorizontal_bias="0.153"
            app:layout_constraintVertical_bias="0.793" android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>
    <Button
            android:text="Maybe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button2"
            app:backgroundTint="#F5ED00" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="MaybeClickHandler"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.793"
            app:layout_constraintStart_toEndOf="@+id/button3" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginLeft="10dp" android:layout_marginStart="10dp"/>
    <TextView
            android:text="@string/pre_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/TextDescription"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="325dp" app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintVertical_bias="0.263"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textGoBackCount"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="325dp"
            app:layout_constraintVertical_bias="0.765"
            android:layout_marginTop="255dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.484"/>
    <TextView
            android:text="@string/prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="75dp" app:layout_constraintVertical_bias="0.345"/>

</androidx.constraintlayout.widget.ConstraintLayout>